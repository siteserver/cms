@page
@{ Layout = "../shared/_layout"; }

<el-form size="small" ref="form" :model="form" label-width="150px">
  <el-form-item label="是否生成下级栏目">
    <el-radio-group v-model="form.isIncludeChildren">
      <el-radio-button :label="true">生成下级</el-radio-button>
      <el-radio-button :label="false">不生成下级</el-radio-button>
    </el-radio-group>
  </el-form-item>
  <el-form-item label="是否生成内容页">
    <el-radio-group v-model="form.isCreateContents">
      <el-radio-button :label="true">生成内容页</el-radio-button>
      <el-radio-button :label="false">不生成内容页</el-radio-button>
    </el-radio-group>
  </el-form-item>
</el-form>

<div style="height: 10px"></div>

<el-divider></el-divider>
<el-row align="right" style="margin-right: 5px; margin-top: 10px;">
  <el-col :span="24" align="right">
    <el-button size="small" type="primary" v-on:click="btnSubmitClick">确 定</el-button>
    <el-button size="small" v-on:click="btnCancelClick">取 消</el-button>
  </el-col>
</el-row>

@section Scripts{
<script src="~/assets/js/cms/channelsLayerCreate.js" type="text/javascript"></script> }