@page
@{ Layout = "_Layout"; }

<div style="height: 10px;"></div>

<el-form v-on:submit.native.prevent size="small" ref="form" :model="form" label-width="280px">

  <el-form-item label="图片上传文件夹" prop="imageUploadDirectoryName" :rules="{ required: true, message: '请输入图片上传文件夹' }">
    <el-input v-model="form.imageUploadDirectoryName" :disabled="isSafeMode" placeholder="请输入图片上传文件夹"></el-input>
  </el-form-item>
  <el-form-item label="图片上传保存方式">
    <el-radio-group v-model="form.imageUploadDateFormatString" :disabled="isSafeMode">
      <el-radio label="Year">按年存入不同目录</el-radio>
      <el-radio label="Month">按年/月存入不同目录</el-radio>
      <el-radio label="Day">按年/月/日存入不同目录</el-radio>
    </el-radio-group>
    <div class="tips">本设置只影响新上传的图片, 设置更改之前的图片仍存放在原来位置</div>
  </el-form-item>
  <el-form-item label="是否自动重命名上传的图片">
    <el-radio-group v-model="form.isImageUploadChangeFileName" :disabled="isSafeMode">
      <el-radio :label="true">自动修改文件名</el-radio>
      <el-radio :label="false">保持文件名不变</el-radio>
    </el-radio-group>
    <div class="tips">本设置只影响新上传的图片, 设置更改之前的图片名仍保持不变</div>
  </el-form-item>
  <el-form-item label="上传图片类型" prop="imageUploadExtensions" :rules="{ required: true, message: '请输入上传图片类型' }">
    <el-input v-model="form.imageUploadExtensions" :disabled="isSafeMode" placeholder="请输入上传图片类型"></el-input>
    <div class="tips">类型之间用“,”分割</div>
  </el-form-item>
  <el-form-item label="上传图片最大大小" prop="imageUploadTypeMaxSize" :rules="[
    { required: true, message: '请输入上传图片最大大小' },
    { validator: utils.validateInt }
  ]">
    <el-input v-model.number="form.imageUploadTypeMaxSize" style="width: 120px" placeholder="请输入上传图片最大大小"></el-input>
    <span class="tips">(MB)</span>
  </el-form-item>
  <el-form-item label="超出尺寸自动缩小">
    <el-radio-group v-model="form.isImageAutoResize">
      <el-radio :label="true">超出尺寸自动缩小</el-radio>
      <el-radio :label="false">保持文件不变</el-radio>
    </el-radio-group>
    <div class="tips">本设置只影响新上传的图片, 设置更改之前的图片文件仍保持不变</div>
  </el-form-item>
  <el-form-item v-if="form.isImageAutoResize" label="自动缩小宽度（像素）" prop="imageAutoResizeWidth" :rules="[
    { required: true, message: '自动缩小宽度' },
    { validator: utils.validateInt }
  ]">
    <el-input v-model.number="form.imageAutoResizeWidth" placeholder="自动缩小宽度"></el-input>
    <div class="tips">当图片宽度超出自动缩小宽度时，系统将把图片缩小为自动缩小宽度</div>
  </el-form-item>

  <el-form-item>
    <el-button type="primary" v-on:click="btnSubmitClick" size="small">确 定</el-button>
  </el-form-item>
</el-form>

@section Scripts{
<script src="/sitefiles/assets/js/admin/cms/settingsUploadImage.js" type="text/javascript"></script> }